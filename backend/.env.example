# Database
DATABASE_URL="postgresql://user:password@localhost:5432/storydoc?schema=public"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Pipedrive
PIPEDRIVE_API_TOKEN=your-pipedrive-api-token
PIPEDRIVE_WEBHOOK_SECRET=your-webhook-secret

# Storage (for images/assets)
# Option 1: Local storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Option 2: S3-compatible (AWS S3, Cloudflare R2, MinIO)
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://your-endpoint.com (optional, for S3-compatible services)

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=150

# Analytics
ANALYTICS_PING_INTERVAL=30000
